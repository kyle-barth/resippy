{
	"name": "recipe",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"sync": "pnpm build; npx cap sync",
		"build": "vite build",
		"build:android": "pnpm build; npx cap sync android && npx cap copy android && npx cap open android",
		"build:ios": "pnpm build; npx cap sync ios && npx cap copy ios && npx cap open ios",
		"preview": "vite preview",
		"test": "playwright test",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:unit": "vitest",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write ."
	},
	"devDependencies": {
		"@capacitor/assets": "^2.0.4",
		"@capacitor/cli": "^5.0.4",
		"@playwright/test": "^1.35.0",
		"@skeletonlabs/skeleton": "^1.7.1",
		"@sveltejs/adapter-auto": "^2.1.0",
		"@sveltejs/kit": "^1.20.2",
		"@testing-library/svelte": "^3.2.2",
		"@typescript-eslint/eslint-plugin": "^5.59.9",
		"@typescript-eslint/parser": "^5.59.9",
		"autoprefixer": "^10.4.14",
		"eslint": "^8.42.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"mdsvex": "^0.10.6",
		"postcss": "^8.4.24",
		"prettier": "^2.8.8",
		"prettier-plugin-svelte": "^2.10.1",
		"svelte": "^3.59.1",
		"svelte-check": "^3.4.3",
		"tailwindcss": "^3.3.2",
		"tslib": "^2.5.3",
		"typescript": "^5.1.3",
		"vite": "^4.3.9",
		"vitest": "^0.25.8"
	},
	"type": "module",
	"dependencies": {
		"@capacitor/android": "^5.0.4",
		"@capacitor/core": "^5.0.4",
		"@capacitor/ios": "^5.0.4",
		"@sveltejs/adapter-static": "^2.0.2"
	}
}
